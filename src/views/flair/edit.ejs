<!DOCTYPE html>
<html>
  <head>
    <%include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Flair</h1>

      <form action="/flair/<%= flair.id %>/update" method="post">
        <div class="form-group">
          <label for"name">Flair Name</label>
          <input value="<%= flair.name %>" type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="color">Color</label>
          <input value = "<%= flair.color %>" type="text" class="form-control" name="color" aria-describedby="colorHelp" placeholder="Enter Color">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>

</html>
